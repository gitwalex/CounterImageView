<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CounterImageView">
        <attr name="filename" format="reference" />
        <attr name="placeholder" format="reference" />
        <attr name="onError" format="reference" />
        <attr name="imagePadding" format="dimension" />
    </declare-styleable>

    <style name="CounterImageViewStyle" parent="DecoViewStyle">
        <item name="imagePadding">30dp</item>
        <item name="dv_lineWidth">10dp</item>
        <item name="dv_rotateAngle">0</item>
        <item name="dv_totalAngle">360</item>
        <item name="dv_arc_gravity_horizontal">Center</item>
        <item name="dv_arc_gravity_vertical">Center</item>
    </style>


</resources>